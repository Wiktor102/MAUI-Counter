<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Counter.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Counter.Views"
    Title="Counter">

    <Shell.TitleView>
        <StackLayout Orientation="Horizontal" Padding="8" Spacing="8" BackgroundColor="{DynamicResource Primary}">
            <Label Text="Counter App" VerticalTextAlignment="End" FontSize="Subtitle" FontAttributes="Bold" />
            <Label Text="Made with ❤️ by Wiktor Golicz" VerticalTextAlignment="End" FontSize="Body" TextColor="LightGray" />
        </StackLayout>
    </Shell.TitleView>

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:CountersView}"
        Route="CountersView" />

</Shell>
