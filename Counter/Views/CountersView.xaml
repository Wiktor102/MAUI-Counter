<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Counter.ViewModels"
             xmlns:views="clr-namespace:Counter.Views"
             x:DataType="viewModels:CountersViewModel"
             x:Class="Counter.Views.CountersView"
             Title="Counters">
    <Grid RowDefinitions="*, Auto">
        <CollectionView ItemsSource="{Binding Counters}"
                        Grid.Row="0"
                        Margin="16">
            <CollectionView.EmptyView>
                <Border BackgroundColor="{DynamicResource Gray950}"
                        StrokeThickness="0"
                        StrokeShape="RoundRectangle 8"
                        Padding="12">
                    <StackLayout HorizontalOptions="Center"
                                 VerticalOptions="Center">
                        <Label Text="No counters added. Use the form at the bottom to create your first counter."
                               HorizontalTextAlignment="Center"/>
                    </StackLayout>
                </Border>
            </CollectionView.EmptyView>

            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical"
                                 Span="2"
                                 HorizontalItemSpacing="8"
                                 VerticalItemSpacing="8"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="viewModels:CounterItemViewModel">
                    <views:CounterCardView/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <views:AddCounterFormView Grid.Row="1" x:Name="AddCounterFormView"/>
    </Grid>
</ContentPage>