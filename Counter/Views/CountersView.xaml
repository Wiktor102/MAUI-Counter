<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Counter.Models"
             xmlns:viewModels="clr-namespace:Counter.ViewModels"
             xmlns:views="clr-namespace:Counter.Views"
             x:DataType="viewModels:CountersViewModel"
             x:Class="Counter.Views.CountersView"
             Title="Counters">
    <Grid RowDefinitions="*, Auto" Padding="12">
        <CollectionView ItemsSource="{Binding Counters}" Grid.Row="0">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="8" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:CounterModel">
                    <views:CounterCardView />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <views:AddCounterFormView Grid.Row="1" />
    </Grid>
</ContentPage>