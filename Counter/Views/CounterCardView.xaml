<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Counter.Models"
             xmlns:converters="clr-namespace:Counter.Converters"
             x:Class="Counter.Views.CounterCardView"
             x:DataType="models:CounterModel">
    <ContentView.Resources>
        <ResourceDictionary>
            <converters:StringHexToColorConverter x:Key="StringHexToColorConverter" />
        </ResourceDictionary>
    </ContentView.Resources>

    <Border Padding="10"
            StrokeShape="RoundRectangle 16"
            StrokeThickness="0"
            BackgroundColor="{Binding Color, Converter={StaticResource StringHexToColorConverter}}">
        <VerticalStackLayout>
            <Label Text="{Binding Name}"
                   FontSize="Large" />
            <Label Text="{Binding Value}"
                   FontSize="Medium" />
            <StackLayout Orientation="Horizontal"
                         Spacing="8">
                <Button Text="+"
                        Command="{Binding IncrementCommand}"
                        CommandParameter="{Binding .}" />
                <Button Text="-"
                        Command="{Binding DecrementCommand}"
                        CommandParameter="{Binding .}" />
                <Button Text="Reset"
                        Command="{Binding ResetCommand}"
                        CommandParameter="{Binding .}" />
                <Button Text="Remove"
                        Command="{Binding RemoveCommand}"
                        CommandParameter="{Binding .}" />
            </StackLayout>
        </VerticalStackLayout>
    </Border>
</ContentView>
